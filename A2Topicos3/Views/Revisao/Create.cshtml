@model A2Topicos3.Models.Revisao

@{
    ViewData["Title"] = "Agendar";
}

<h4>Agendar revisao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRevisao" class="control-label"></label>
                <input asp-for="DataRevisao" type="date" class="form-control" />
                <span asp-validation-for="DataRevisao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarroId" class="control-label">Carro</label>
                <select asp-for="CarroId" class ="form-control" asp-items="ViewBag.CarroId"></select>
            </div>
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Agendar" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
